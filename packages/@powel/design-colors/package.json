{
  "name": "@powel/design-colors",
  "version": "0.0.0",
  "description": "Color primitives for Powel design primitives",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/PowelAS/design-primitives.git",
    "directory": "packages/@powel/design-colors"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.common.js",
  "module": "dist/index.module.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint . --cache --fix --ext \".js,.ts\" --ignore-path ../../../.prettierignore",
    "clean": "rimraf dist coverage ../../node_modules/@powel/design-colors",
    "_theo": "theo --setup theo.setup.js --transform web --dest ../../node_modules/@powel/design-colors/dist",
    "prebuild": "npm run clean",
    "postbuild": "cpy package.json ../../node_modules/@powel/design-colors",
    "build:tokens": "npm run _theo -s -- --format scss,json,common.js,module.js,custom-properties.css,html src/index.yml",
    "build:backgroundFills": "npm run _theo -s -- --format withTextColors.json,html src/backgroundFills.yml",
    "build:textColors": "npm run _theo -s -- --format json,html src/textColors.yml",
    "build": "run-p build:*",
    "prepublishOnly": "rimraf dist && cpy \"@powel/design-colors/dist/**/*\" .. --cwd=../../node_modules --parents"
  },
  "devDependencies": {
    "@fantasy-color/contrast-ratio-luminance": "0.1.0",
    "@fantasy-color/from-hex": "0.1.0",
    "@fantasy-color/luminance-rgb": "0.1.0",
    "cpy-cli": "3.0.0",
    "eslint": "6.8.0",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.0",
    "theo": "8.1.4",
    "typescript": "3.7.4"
  }
}
